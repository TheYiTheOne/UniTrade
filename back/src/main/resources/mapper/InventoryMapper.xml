<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.hitsz.mapper.InventoryMapper">

    <!--条件查询-->
    <select id="list" resultType="cn.edu.hitsz.pojo.Inventory">
        select *
        from inventory
        where product_id in
            (select id
            from products
            <where>
                <if test="name != null and name != ''">
                    name like concat('%', #{name}, '%')
                </if>
            </where>
            )
        order by update_time desc
    </select>


</mapper>
